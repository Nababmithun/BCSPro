<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.cardview.widget.CardView
               app:cardElevation="4dp"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="135dp">


               <LinearLayout
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="10dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">


                       <Button

                           android:id="@+id/subject1"
                           android:layout_marginLeft="20dp"
                           android:background="@drawable/brain"
                           android:layout_width="70dp"
                           android:layout_height="70dp"/>

                       <TextView

                           android:layout_marginTop="10dp"
                           android:text="বিষয়ভিত্তিক পরীক্ষা"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>


                   <LinearLayout
                       android:layout_marginLeft="23dp"
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">


                       <ImageView
                           android:id="@+id/subject2"
                           android:layout_marginLeft="9dp"
                           android:src="@drawable/allterin"
                           android:layout_width="70dp"
                           android:layout_height="70dp"/>

                       <TextView
                           android:layout_marginTop="10dp"
                           android:text="সামগ্রিক পরীক্ষা"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_marginLeft="29dp"

                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">


                       <ImageView
                           android:id="@+id/subject3"

                           android:layout_marginLeft="15dp"
                           android:src="@drawable/backpack"
                           android:layout_width="70dp"
                           android:layout_height="70dp"/>

                       <TextView
                           android:layout_marginTop="10dp"

                           android:text="প্রশ্ন ব্যাংক সমাধান "
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>


               </LinearLayout>




           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               app:cardElevation="4dp"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="145dp">



               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_marginLeft="22dp"
                       android:layout_marginTop="20dp"
                       android:src="@drawable/notification"
                       android:layout_width="70dp"
                       android:layout_height="70dp"/>


                   <TextView

                       android:layout_marginLeft="147dp"
                       android:layout_marginTop="20dp"

                       android:text="ভিডিও দেখে জিতে নিন\n          ১০ পয়েন্ট  "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </LinearLayout>


               <TextView
                   android:layout_marginLeft="160dp"
                   android:layout_marginTop="120dp"
                   android:text="ভিডিও দেখুন "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>




           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               app:cardElevation="4dp"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="145dp">


               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="16dp"
                       android:orientation="vertical"
                       android:layout_width="130dp"
                       android:layout_height="wrap_content">


                       <ImageView
                           android:layout_marginLeft="39dp"
                           android:layout_marginTop="20dp"
                           android:src="@drawable/answer"
                           android:layout_width="45dp"
                           android:layout_height="45dp"/>
                       <TextView
                           android:layout_marginTop="25dp"
                           android:layout_gravity="center"
                           android:text="কুইজ  কুইজ "
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_marginLeft="110dp"
                       android:layout_marginTop="16dp"
                       android:orientation="vertical"
                       android:layout_width="130dp"
                       android:layout_height="wrap_content">


                       <ImageView
                           android:layout_marginLeft="38dp"

                           android:layout_marginTop="20dp"
                           android:src="@drawable/answer"
                           android:layout_width="45dp"
                           android:layout_height="45dp"/>
                       <TextView
                           android:layout_marginTop="25dp"
                           android:layout_gravity="center"
                           android:text="মার্ক কুইজ "
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>



               </LinearLayout>


           </androidx.cardview.widget.CardView>






           <androidx.cardview.widget.CardView
               app:cardElevation="4dp"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="145dp">



               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">



                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:layout_marginTop="16dp"
                           android:layout_marginLeft="10dp"
                           android:orientation="vertical"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">




                           <TextView

                               android:textSize="20dp"
                               android:text="আপনার অনুভূতি
"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                           <TextView

                               android:layout_gravity="center"
                               android:layout_marginTop="2dp"
                               android:textSize="15dp"
                               android:text="আপনার অনুভূতি
"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>



                       </LinearLayout>


                       <Button
                           android:textAllCaps="false"
                           android:text="Review Us"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="19dp"
                           android:layout_width="140dp"
                           android:layout_height="wrap_content"/>




                   </LinearLayout>



                   <ImageView
                       android:layout_marginTop="50dp"
                       android:layout_marginLeft="150dp"
                       android:src="@drawable/mail"
                       android:layout_width="60dp"
                       android:layout_height="60dp"/>

               </LinearLayout>



           </androidx.cardview.widget.CardView>






       </LinearLayout>





   </ScrollView>

</LinearLayout>